<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
		<class>br.com.targettrust.cadastro.entidades.Usuario</class>
		<class>br.com.targettrust.cadastro.entidades.Alunos</class>
		<class>br.com.targettrust.cadastro.entidades.Endereco</class>
		<class>br.com.targettrust.cadastro.entidades.CodigoPostal</class>
		<class>br.com.targettrust.cadastro.entidades.Cidades</class>
		<class>br.com.targettrust.cadastro.entidades.Bairro</class>
		<class>br.com.targettrust.cadastro.entidades.Estado</class>
		<class>br.com.targettrust.cadastro.entidades.Pais</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jpa"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		</properties>
	</persistence-unit>
</persistence>
